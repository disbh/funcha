---
export interface Props {
  title: string;
  description?: string;
  url: string;
  tags: Array<string>;
  allergens: Array<string>;
  slug: string;
}
const { title, description, url, tags, allergens, slug } = Astro.props;
---

<a
  class="rounded-lg group flex flex-col w-full dark:bg-dark-text/[0.03] bg-light-text/[0.03] hover:drop-shadow-xl hover:shadow-xl transition-all border-0 hover:border-0 duration-500 delay-75 overflow-hidden"
  href=`/recipes/${ slug }`
>
  <img
    src={url}
    alt=`${title} Image`
    class="aspect-square bg-contain group-hover:scale-110 group-hover:mb-10 lg:group-hover:mb-4 transition-all duration-500 object-cover rounded-t-lg"
  />
  <div class="px-8 py-4">
    <h2 class="dark:text-dark-text text-light-text">{title}</h2>
    <div class="flex flex-row flex-wrap gap-3 my-4">
      {
        tags.map((tag) => (
          <span class="dark:hover:brightness-[0.75] hover:brightness-[0.5] transition-all light:drop-shadow-md light:shadow-md duration-1000 select-none bg-accent text-dark-text rounded-full px-3">
            {tag}
          </span>
        ))
      }
      {
        allergens.map((allergen) => (
          <span class="dark:hover:brightness-[0.75] hover:brightness-[0.5] transition-all light:drop-shadow-md light:shadow-md duration-1000 select-none bg-primary text-dark-text rounded-full px-3">
            {allergen}
          </span>
        ))
      }
    </div>
    <p class="dark:text-dark-text text-light-text">
      {description}
    </p>
  </div>
</a>
